<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/listBackGround"
android:layout_width="match_parent"
android:layout_height="wrap_content">
    <TextView
        android:id="@+id/descriptionHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Description"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:weightSum="100"
        android:layout_below="@+id/descriptionHistory"
        android:background="@color/background"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <LinearLayout
            android:id="@+id/clickHistoryLinear"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="60">
            <ImageView
                android:id="@+id/fileLogoHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pdfimg"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="15dp">
                <TextView
                    android:id="@+id/fileNameHistoryTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="text description"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:src="@color/green"
            android:id="@+id/indicationHistoryImg"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="39">
            <TextView
                android:id="@+id/statusHistoryTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assigned"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right">
                <ImageView
                    android:id="@+id/downloadHistoryLinear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/download_new_homework"
                    />
                <ImageView
                    android:id="@+id/shareHistoryLinear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/share_new_homework"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>