<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical">

    <ImageView
        android:id="@+id/staffImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/grey_border_rectangle"
        />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="80"
            android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="100">
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:layout_weight="70"
                   android:layout_marginTop="10dp">
                   <com.algubra.manager.CustomTextViewBold
                       android:id="@+id/staffName"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="10dp"
                       android:gravity="left|center"
                       android:text="asas"
                       android:textColor="@color/contact_textcolor"
                       android:textSize="16sp" />

                   <com.algubra.manager.CustomTextViewNormal
                       android:id="@+id/staffType"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerInParent="true"
                       android:gravity="left|center"
                       android:layout_marginLeft="10dp"
                       android:text=""
                       android:textColor="@color/contact_textcolor"
                       android:textSize="14sp" />

               </LinearLayout>
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="30"
                   android:gravity="center"
                   android:visibility="gone"
                   android:layout_marginTop="10dp"
                   android:orientation="horizontal">
                   <ImageView
                       android:id="@+id/callicon1"
                       android:layout_width="35dp"
                       android:layout_height="35dp"
                       android:layout_gravity="center"
                       android:background="@drawable/phone"
                       /><ImageView
                   android:id="@+id/sendMail1"
                   android:layout_width="35dp"
                   android:layout_height="35dp"
                   android:layout_gravity="center"
                   android:layout_marginLeft="10dp"
                   android:background="@drawable/message"
                   />
               </LinearLayout>
           </LinearLayout>
            <com.algubra.manager.CustomTextViewNormal
                android:id="@+id/staffClassDiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="left|center"
                android:layout_marginLeft="10dp"
                android:text="sjsjsjsj"
                android:textColor="@color/contact_textcolor"
                android:textSize="14sp" />
            <com.algubra.manager.CustomTextViewSemiBold
                android:id="@+id/staffDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="left|center"
                android:singleLine="false"
                android:text="The advisors of the Princess did not like this test; but she commanded them to step into the flame "
                android:textColor="@color/contact_textcolor"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="top|center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/callicon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top|center"
                android:src="@drawable/phone"
                android:padding="2dp"
                /><ImageView
            android:id="@+id/sendMail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="top|center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/message"
            android:padding="2dp"

            />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
