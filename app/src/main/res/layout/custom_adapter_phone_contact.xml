<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:weightSum="23"
        android:layout_marginTop="10dp"

        >
        <LinearLayout
            android:id="@+id/mainScLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="left|center"
            android:padding="5dp"
            android:background="@color/login_button_bg">
            <com.algubra.manager.CustomTextViewSemiBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="2"
                android:maxLines="2"
                android:textSize="13sp"
                android:layout_marginLeft="5dp"
                android:gravity="left|center"
                android:textColor="@color/white"
                android:id="@+id/mainSchoolTitle"
                android:text="@string/mainschool"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:padding="5dp"
            android:gravity="right|center"
            android:background="@color/contact_value_textcolor">
            <com.algubra.manager.CustomTextViewSemiBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="2"
                android:maxLines="2"
                android:textSize="13sp"
                android:gravity="left|center"
                android:layout_marginLeft="5dp"
                android:textColor="@color/contact_textcolor"
                android:id="@+id/mainSchoolValue"
                android:text=""
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:background="@color/contact_value_textcolor">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="left|center"
                android:src="@drawable/phone"
                android:textColor="@color/contact_textcolor"
                android:id="@+id/callMainSchool"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>